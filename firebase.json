{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "y"
  },
  "hosting": {
    "public": "dist",
    "site": "vue-simplepad",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
